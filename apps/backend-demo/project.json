{
  "name": "demo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend-demo/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "configurations": {
        "production": {
          "command": "./gradlew build -x test",
          "cwd": "apps/backend-demo"
        },
        "development": {
          "command": "./gradlew build -x test",
          "cwd": "apps/backend-demo"
        }
      },
      "defaultConfiguration": "development",
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/**/*"
      ],
      "outputs": [
        "{projectRoot}/build"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew test",
        "cwd": "apps/backend-demo"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/reports/tests",
        "{projectRoot}/build/test-results"
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "configurations": {
        "production": {
          "command": "./gradlew bootRun --args='--spring.profiles.active=prod'",
          "cwd": "apps/backend-demo"
        },
        "development": {
          "command": "./gradlew bootRun",
          "cwd": "apps/backend-demo"
        }
      },
      "defaultConfiguration": "development"
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew clean",
        "cwd": "apps/backend-demo"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew spotlessCheck",
        "cwd": "apps/backend-demo"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew spotlessApply",
        "cwd": "apps/backend-demo"
      },
      "cache": false
    }
  }
}
