{
  "name": "angular-demo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/angular-demo/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "inputs": [
        "!{projectRoot}/**/*.md"
      ],
      "outputs": ["{options.outputPath}"],
      "cache": true,
      "options": {
        "outputPath": "dist/apps/angular-demo",
        "browser": "apps/angular-demo/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/angular-demo/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/angular-demo/public"
          }
        ],
        "styles": ["apps/angular-demo/src/styles.css"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "apps/angular-demo/src/environments/environment.ts",
              "with": "apps/angular-demo/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "development"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "angular-demo:build:production"
        },
        "development": {
          "buildTarget": "angular-demo:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "angular-demo:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "cache": true
    },
    "test": {
      "executor": "@nx/vite:test",
      "cache": true,
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/angular-demo"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "cache": true,
      "options": {
        "buildTarget": "angular-demo:build",
        "staticFilePath": "dist/apps/angular-demo/browser",
        "spa": true
      }
    }
  }
}
